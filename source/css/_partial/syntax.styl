article .gist table
  margin-top 0
.entry
  .gist
    background-color #EEE
    margin-top 15px
    margin-bottom 12px
    padding 3px
    border-radius 3px
    overflow auto
    .gist-file
      background-color #fff
      border 1px solid #CCC
      position relative
      margin-bottom 0
      .gist-data
        background none
        border-bottom none
        pre
          padding 0 !important
          font-family font-mono
        .line-data
          padding 12px !important
          padding-right 0 !important
          width 100%
        .line-pre
          overflow visible

      .gist-meta
        background none
        color color-meta
        margin-top 5px
        padding 0 10px
        text-shadow 0 0 1px #fff
        font-size 12px
        a
          color color-link
          &:visited
            color color-link
      .line-data .gd, .line-data .gi, .line-data .gu
        display block
        margin-left -12px
        padding-left 12px
      .line-data .gu 
        color #999
        background-color #EAF2F5
        font-weight normal

    .gist-file:first-child
      border-bottom none

    .gist-file:only-child
      border-bottom 1px solid #CCC

    .gist-file .gist-data .line-numbers
      background-color: #f8f8f8
      
figure.highlight
  width 100%
  background #eee
  margin-top 15px
  padding 3px
  border-radius 3px
  text-shadow 0 0 1px #fff
  overflow auto
  position relative
  font-size 12px
  figcaption
    color color-meta
    padding 5px
    border-top 1px solid #DDD
    border-left 1px solid #DDD
    border-right 1px solid #DDD
    background-color #F8F8F8
    background-image linear-gradient(#ffffff, #F8F8F8)
    a
      position absolute
      right 15px

  pre
    border none
    padding 0
    margin 0
    background-color #fff

  table
    margin-top 0
    border-spacing 0
    background-color #fff
    border-top 1px solid #EEE
    border-bottom 1px solid #DDD
    border-left 1px solid #DDD
    border-right 1px solid #DDD

  .gutter
    background-color #f8f8f8
    color color-meta
    padding 0 .5em
    border-right 1px solid color-border
    text-align center

  .code
    padding 10px 0 10px 12px
    color #666
    width 100%

